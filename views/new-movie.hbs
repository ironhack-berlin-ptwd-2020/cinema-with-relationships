<form action="/movies/create" method="post">

  Title: <input type="text" name="title"> <br>
  Director: <input type="text" name="director">
  Actor:
  <select name="chosenActor">
    {{#each allActors}}
    <option value="{{_id}}">{{name}}</option>
    {{/each}}
  </select>

  <button type="submit">Save</button>
</form>